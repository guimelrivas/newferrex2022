<!-- app/views/products/_form.html.erb -->
<div class="row">
  <div class="col-lg-12">
    <div class="card p-5">


  <div class="container">
    <%= form_with(model: product, local: true) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
    
          <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
            
      <div class="form-group">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, class:'form-control', placeholder: 'Nombre' %>
      </div>
            
      <div class="form-group">
        <%= form.label :price, style: "display: block" %>
        <%= form.text_field :price, class:'form-control', placeholder: 'Precio' %>
      </div>
            
      <div class="form-group">
        <%= form.label :reference, style: "display: block" %>
        <%= form.text_field :reference, class:'form-control' %>
      </div>
            
      <div class="form-group">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_area :description, class:'form-control' %>
      </div>
            
      <div class="form-group">
        <%= form.label :quantity, style: "display: block" %>
        <%= form.number_field :quantity, class:'form-control', placeholder: 'Stock' %>
      </div>
            
      <div class="form-group">
        <%= form.label :img_url, style: "display: block" %>
        <%= form.text_field :img_url, class:'form-control' %>
      </div>
    <br>
      <div class="form-group">
        <%= form.label :imagen %>
        <%= form.file_field :imagen %>
      </div>
    <br>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
  </div>
 </div>
</div>